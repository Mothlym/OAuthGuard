/*
 * manifest.json for IDST (Identity Management Security Tester)
 * Registration manifest information for the IDT chrome extension.
 * Author : Wanpeng Li
 */
{
    "manifest_version":2,


    "name":"OAuthalayser",
    "version":"0.0.1",
    "description": "An OAuth 2.0 and OpenID Connect Vulnerability Scanner",

    "browser_action": {
        "default_title":"Click To see Report!",
        "default_icon": "images/OAuthalayser.png",
        "default_popup":"contents/popup.html"

    },
    "icons":{
        "128" : "images/OAuthalayser.png"
    },

    "background":{
        "scripts":["scripts/background.js", "scripts/popup.js"],
        "persistent" : true
    },

    "content_scripts": [{
        "matches":[
            "https://*/*",
            "http://*/*"
        ],
        "js":[
            "scripts/detect.js"
        ],
        "all_frames": true,
        "run_at": "document_end"

    }],

    "permissions":[
        "<all_urls>",
        "webRequest",
        "webRequestBlocking",
        "storage",
        "tabs",
        "downloads",
        "unlimitedStorage",
        "notifications"
    ]

}
